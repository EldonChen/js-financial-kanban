# MongoDB 配置
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=financial_kanban

# 服务配置
PORT=8001
HOST=0.0.0.0

# 环境
ENVIRONMENT=development

# 数据源配置（第一优先级：免费优先、无需认证）
# 默认启用，无需配置即可使用
ENABLE_AKSHARE=true
ENABLE_YFINANCE=true
ENABLE_EASYQUOTATION=false  # 可选，仅用于 A 股实时行情补充

# 数据源配置（第二优先级：需要注册 API Key，存在限制）
# 以下数据源需要配置相应的 API Key 才能启用
ENABLE_TUSHARE=false
TUSHARE_TOKEN=  # Tushare token（如果启用 Tushare）

ENABLE_IEX_CLOUD=false
IEX_CLOUD_API_KEY=  # IEX Cloud API Key（如果启用 IEX Cloud）

ENABLE_ALPHA_VANTAGE=false
ALPHA_VANTAGE_API_KEY=  # Alpha Vantage API Key（如果启用 Alpha Vantage）
